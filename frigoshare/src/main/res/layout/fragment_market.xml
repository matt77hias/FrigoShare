<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82D8EF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#82D8EF"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/search_btn"
            style="@style/IconButton"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#00ACED"
            android:drawableLeft="@drawable/arrow_left"
            android:paddingRight="8dp"
            android:text="@string/search_btn_txt" />

        <Button
            android:id="@+id/offer_btn"
            style="@style/IconButton"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="#00ACED"
            android:drawableLeft="@drawable/arrow_right"
            android:paddingRight="8dp"
            android:text="@string/offer_btn_txt" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandleClaimView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="-1dp"
        android:groupIndicator="@null"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />
</LinearLayout>

